{
    "name": "trgiahuy/vietnews-cms-php",
    "description": "News Manager PHP MVC",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/app/",
            "Core\\": "src/Core/"
        },
        "files": [
            "src/helpers/functions.php"
        ]
    },
    "minimum-stability": "stable",
    "require": {
        "phpmailer/phpmailer": "^7.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
